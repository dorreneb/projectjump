<%- model_class = Project -%>
<div class="span12">
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  </div>

    <% @projects.each do |project| %>
      <div class="project">
        <h3><%= link_to project.name, project %></h3>
        <div class="statusinfo">
          <span class="info"><span class="miniheader">Status:</span> <%= project.active ? "Active" : "Inactive"%></span>
          <span class="info"><span class="miniheader">Project Repository:</span> <%= project.repo_url %></span>
          <span class="info"><span class="miniheader">Task Tracker URL:</span>  <%= project.task_tracker_url %></span>
        </div>
        <div class="description">
          <div class="miniheader">Description:</div>
          <%= project.description %>
        </div>
      </div> 
      <hr/>
